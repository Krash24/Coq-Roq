Section CoqLab02.



Context (A B C : Prop).



(***************************************************)

(* And / Or *)



Lemma q1 : (A /\ B) /\ C -> A /\ (B /\ C).

Proof.

  intros [[HA HB] HC].

  split.

  exact HA.

  split.
  
  exact HB.

  exact HC.

Qed.



Lemma q2 : ((A /\ B) -> C) -> (A -> (B -> C)).

Proof.

  intros H HA HB.

  apply H. split; assumption.

Qed.



Lemma q3 : (A \/ B) \/ C -> A \/ (B \/ C).

Proof.

  intros H.

  destruct H as [[HA | HB] | HC].

  - left; assumption.

  - right; left; assumption.

  - right; right; assumption.

Qed.



Lemma q4 : ((A \/ B) -> C) -> (A -> (B -> C)).

Proof.

  intros H HA HB.

  apply H. left. assumption.

Qed.



(***************************************************)

(* Negation *)



Lemma q5 : (~A \/ B) -> (A -> B).

Proof.

  intros H Ha.

  destruct H as [Hna | Hb].

  - exfalso. apply Hna. assumption.

  - assumption.

Qed.



Lemma q6 : (A -> B) -> (~B -> ~A).

Proof.

  intros H Hnb Ha.

  apply Hnb. apply H. assumption.

Qed.



Lemma q7 : ~(A /\ ~A).

Proof.

  intros [Ha Hna].

  apply Hna. assumption.

Qed.



(***************************************************)

(* De Morganâ€™s Laws *)



Hypothesis LEM : forall P : Prop, P \/ ~P.



Lemma q8 : ~(A \/ B) -> ~A /\ ~B.

Proof.

  intros H.

  split.

  - intros Ha. apply H. left. assumption.

  - intros Hb. apply H. right. assumption.

Qed.



Lemma q9 : ~A /\ ~B -> ~(A \/ B).

Proof.

  intros [Hna Hnb] H.

  destruct H as [Ha | Hb].

  - apply Hna. assumption.

  - apply Hnb. assumption.

Qed.



Lemma q10 : ~A \/ ~B -> ~(A /\ B).

Proof.

  intros H [Ha Hb].

  destruct H as [Hna | Hnb].

  - apply Hna. assumption.

  - apply Hnb. assumption.

Qed.



Lemma q11 : ~(A /\ B) -> ~ A \/ ~ B.

Proof.

  intros H.

  destruct (LEM A) as [Ha | Hna].

  - right. intros Hb. apply H. split; assumption.

  - left. assumption.

Qed.



End CoqLab02.

